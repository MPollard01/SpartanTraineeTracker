@model CategoryListVM

@{
    ViewData["Title"] = "Tests";
}

<div class="container mt-3">
    <div class="row w-75 mx-auto">
        <div class="text-center my-4">
            <h1>Online Programming Language Tests</h1>
            <h2 class="text-danger">Select a programming category and start testing now</h2>
        </div>
        <div class="col">
            <div class="card shadow">
                <div class="card-body d-flex justify-content-center align-items-center flex-column gap-2">
                    <a asp-action="Categories" class="text-center">
                        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/csharp/csharp-original.svg" class="h-50 w-50" />
                    </a>
                    <a class="card-title h2 link-info text-decoration-none" asp-action="Categories" asp-route-category="CSharp">CSharp</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card shadow">
                <div class="card-body d-flex justify-content-center align-items-center flex-column gap-2">
                    <a asp-action="Categories" class="text-center">
                        <img src="https://cdn.jsdelivr.net/gh/devicons/devicon/icons/java/java-original-wordmark.svg" class="h-50 w-50" />
                    </a>
                    <a class="card-title h2 link-info text-decoration-none" asp-action="Categories">Java</a>
                </div>
            </div>
        </div>
    </div>
</div>
